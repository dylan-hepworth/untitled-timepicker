{
    "files.eol": "\n",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll.stylelint": true
    },
    "eslint.validate": [
        "javascript"
    ],
    "eslint.workingDirectories": [
        {
            "mode": "auto"
        }
    ],
    "stylelint.validate": [
        "css",
        "scss"
    ],
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false
}